@article{rijn2007b,
  title = {Unified {{View}} of {{Sediment Transport}} by {{Currents}} and {{Waves}}. {{I}}: {{Initiation}} of {{Motion}}, {{Bed Roughness}}, and {{Bed}}-{{Load Transport}}},
