  shortjournal = {Journal of Non-Newtonian Fluid Mechanics},
  date = {1995-03-01},
  pages = {221--251},
  keywords = {suspensions,Depletion,Emulsions,Macromolecules,Migration,Slip,Wall},
  author = {Barnes, Howard A.},
