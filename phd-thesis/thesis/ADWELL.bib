@inproceedings{florence2010,
  location = {{New Orleans, LA}},
  title = {Real-{{Time Models}} for {{Drilling Process Automation}}: {{Equations}} and {{Applications}}},
  doi = {10.2118/128958-MS},
  shorttitle = {{{SPE}}-128958-{{MS}}},
  abstract = {How good are your models? Can they be used to improve your drilling processes? These are questions often posed in relation to real-time model applications, including models integrated with drilling control. Do the models fulfill requirements with regards to accuracy and calculation speed? Can the data be applied by the models to both interpret the state of the process and provide reliable input for calculations? Can the rig equipment be used safely and securely to control the processes? This paper seeks to answer these questions and further elaborate on current activities and near-term challenges in drilling automation. While static models are generally accepted, the use of dynamic models is emerging. In real-time model applications, it has been found that rig equipment analysis is necessary to assess applicability or upgrading requirements. Controlling machines for drilling operations using outputs from models has been successfully achieved. This paper provides examples of recent developments within drilling automation, drawing from applications of closed-loop control systems in the North Sea. Challenges regarding interpreting state-of-the-process are discussed, with respect to existing rig instrumentation, while examining the need for enhanced surface and downhole sensors. Mathematical models used with the drilling control system must communicate regularly with the drilling process to extract information from sensors and provide updated control commands for automation. How sensor data is applied through models to enable automation functionality is also illustrated. Introduction Instrumentation arrived fairly early in the drilling business, as drillers developed new ways to monitor the well drilling beneath them. Steam-pressure gauges were quickly followed by drilling-fluid pressure gauges. By the late 1920s, the weight indicator appeared, giving the driller the first look at the drillstring interaction with the wellbore. These early sensors were used in real time to monitor current conditions while drilling. With the advent of chart recorders, drilling trends could be more easily recognized. When computers were introduced to the industry, data could be recorded with more accuracy, and output could be displayed in real time or archived for post-well review. With data interchange protocols and satellite telecommunication systems, virtually all the parameters from surface and sub-surface sensors can be viewed in near real time around the globe. As monitoring gave way to trending, trending is now yielding the stage to dynamic modeling. The question is whether the nature of the sensors and the methods used for data processing kept pace with the way the data is used today. Real-time drilling process models have developed from simplified steady-state models incorporating the physics of single-phase fluid flow and static drillstring torque and hook load, used primarily for planning and decision-making purposes, to more advanced dynamic models having increasing complexity with regards to process details. Today's models address such drilling dynamics as drillstring mechanics and vibrations, temperature modeling and multiphase flow including high-accuracy multiple fluid and cuttings transport calculations. These dynamic drilling models in turn enable new types of model-enabled control functionalities such as advanced managed pressure drilling, dual-gradient applications, rate of penetration (ROP) optimization and automatic safeguarding of the drilling process with regards to well and rig limitations. The complexity of the model equations increases as more effects are taken into account, and the number and complexity of required sub-models and correlations are increasing to achieve the level of complexity required as the model results are linked closer and closer to control of the drilling procedure, from advisory to physical constraints and up to the point of automatic control of the drilling machinery.},
  eventtitle = {{{IADC}}/{{SPE Drilling Conference}} and {{Exhibition}}},
  publisher = {{Society of Petroleum Engineers}},
  date = {2010-01-01},
  keywords = {Real-time,Drilling},
  author = {Florence, Fred and Iversen, Fionn Petter},
  file = {C:\\Users\\alexabus\\Zotero\\storage\\DRWGAITD\\Florence and Iversen - 2010 - Real-Time Models for Drilling Process Automation .pdf}
}

@article{ford1996,
  title = {A New {{MTV}} Computer Package for Hole-Cleaning Design and Analysis},
  volume = {11},
  doi = {https://doi.org/10.2118/26217-PA},
  shorttitle = {{{SPE}}-26217-{{PA}}},
  abstract = {This paper describes a computer package that can be used to calculate the minimum transport velocity (MTV) required to ensure efficient hole cleaning during deviated drilling operations. The package was developed in the Dept. of Petroleum Engineering at Heriot-Watt U. It operates in a Windows environment and allows the user to do the following:

Define, from viscometer data, the rheological model (PowerLaw, Bingham Plastic, or Herschel-Bulkley) that best describes a particular drilling fluid.

Model the drilling fluid velocity profile in a defined annular geometry.

Predict the minimum circulation rate required to ensure efficient cuttings transport for a wide range of operational conditions.

The paper describes how the lift and drag forces on the cuttings have been determined and used in the development of the package. Case studies that demonstrate the functionality of the package are also presented.},
  issue = {03},
  journaltitle = {SPE Drilling \& Completion},
  date = {1996},
  pages = {168--172},
