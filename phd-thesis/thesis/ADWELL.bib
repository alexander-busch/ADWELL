  file = {C:\\Users\\alexabus\\Zotero\\storage\\WQW2SDAJ\\Poloski et al. - 2009 - Deposition Velocities of Newtonian and Non-Newtoni.pdf},
  mendeley-tags = {Experiment,Non-Newtonian,Rheology}
}

