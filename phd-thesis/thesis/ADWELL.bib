@inproceedings{allahverdizadeh2015a,
  location = {{Ankara}},
  title = {A Comparative Study of Cuttings Transport Performance of Water versus Polymer-Based Fluids in Horizontal Wells},
  url = {http://www.researchgate.net/profile/Payam_Allahverdizadeh/publication/276354306_A_COMPARATIVE_STUDY_OF_CUTTINGS_TRANSPORT_PERFORMANCE_OF_WATER_VERSUS_POLYMER-BASED_FLUIDS_IN_HORIZONTAL_WELLS/links/5557abe608ae6fd2d824f23d.pdf?&inViewer=true},
